generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Time {
  id              Int           @id @default(autoincrement())
  nome            String
  sigla           String
  cor             String
  cidade          String
  bandeira_estado String
  instagram       String
  instagram2      String
  logo            String
  temporada       String
  jogadores       JogadorTime[]

}

model Jogador {
  id        Int           @id @default(autoincrement())
  nome      String
  times     JogadorTime[] // Relação com times por temporada
}

model JogadorTime {
  id           Int    @id @default(autoincrement())
  jogadorId    Int
  timeId       Int
  temporada    String
  numero       Int
  camisa       String
  estatisticas Json // Estatísticas simplificadas para flag football

  jogador Jogador @relation(fields: [jogadorId], references: [id])
  time    Time    @relation(fields: [timeId], references: [id])

  @@unique([jogadorId, timeId, temporada])
}

model MetaDados {
  id    Int    @id @default(autoincrement())
  chave String @unique
  valor String @db.Text
}
