generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Time {
  id              Int           @id @default(autoincrement())
  nome            String
  sigla           String
  cor             String
  cidade          String
  bandeira_estado String
  instagram       String
  instagram2      String
  logo            String
  temporada       String        // "2024", "2025", etc.
  jogadores       JogadorTime[]

  @@unique([sigla, temporada]) // Garante que não haverá times com a mesma sigla na mesma temporada
}

model Jogador {
  id            Int           @id @default(autoincrement())
  nome          String
  idade         Int
  altura        Float
  peso          Float
  instagram     String
  instagram2    String
  cidade        String
  times         JogadorTime[] // Relação com times por temporada
}

model JogadorTime {
  id           Int    @id @default(autoincrement())
  jogadorId    Int
  timeId       Int
  temporada    String // "2024", "2025", etc.
  numero       Int
  camisa       String
  estatisticas Json   // Estatísticas simplificadas para flag football

  jogador Jogador @relation(fields: [jogadorId], references: [id])
  time    Time    @relation(fields: [timeId], references: [id])

  @@unique([jogadorId, timeId, temporada])
}